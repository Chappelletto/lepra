<h4>Details of posts:</h4>

<p>
	<%= @row['content'] %>
	<br />
	<br />
	<%= @row['created_date'] %>
	<br>
</p>

<br />
<h4>Comments</h4>
<br>
<% @comments.each do |comment| %>

	<p>
		<%= comment['content'] %>
		<br>
		<br>
	<span style="font-size: 75%; color: #999">added at <%= comment['created_date'] %></span> 
	</p>
	<hr>

<% end %>

<p>
	<form action="/details/<%= @row['id'] %>" method="POST"> 
 	<textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="6" placeholder="Type comment text..."></textarea>
	<br>
 	<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>